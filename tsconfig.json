{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules/*",
    "**/*.test.ts"
  ]
}